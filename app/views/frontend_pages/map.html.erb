<div class="container-fluid">
  <div class="row">
    <!-- Map Container -->
    <div class="col-md-9">
      <div id="map" style="height: 600px;" data-controller="map" data-map-restaurants-value="<%= @restaurants.to_json %>">
      </div>
    </div>

    <!-- Restaurant List -->
    <div class="col-md-3">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">Taco Places</h5>
          <%= link_to 'Add a Restaurant', new_restaurant_path, class: 'btn btn-primary my-3' %>
        </div>
        <div class="card-body">
          <%= render 'frontend_pages/restaurant_list' %>
        </div>
      </div>
    </div>
  </div>
</div>
