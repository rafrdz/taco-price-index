<h1>Restaurants</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>City</th>
      <th>State</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.city %></td>
        <td><%= restaurant.state %></td>
        <td>
          <%= link_to 'Show', restaurant, class: 'btn btn-sm btn-outline-primary' %>
          <%= link_to 'Edit', edit_restaurant_path(restaurant), class: 'btn btn-sm btn-outline-secondary' %>
          <%= link_to 'Destroy', restaurant, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Restaurant', new_restaurant_path, class: 'btn btn-primary' %>
