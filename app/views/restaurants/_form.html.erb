<%= form_with(model: restaurant, class: "needs-validation", data: { controller: "geocoding" }) do |form| %>
  <% if restaurant.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(restaurant.errors.count, "error") %> prohibited this restaurant from being saved:</h2>
      <ul class="mb-0">
        <% restaurant.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :street_address, class: "form-label" %>
    <%= form.text_field :street_address, class: "form-control", data: { geocoding_target: "streetAddress" } %>
  </div>
  <div class="mb-3">
    <%= form.label :city, class: "form-label" %>
    <%= form.text_field :city, class: "form-control", data: { geocoding_target: "city" } %>
  </div>
  <div class="mb-3">
    <%= form.label :state, class: "form-label" %>
    <%= form.text_field :state, class: "form-control", data: { geocoding_target: "state" } %>
  </div>
  <div class="mb-3">
    <%= form.label :zip, class: "form-label" %>
    <%= form.text_field :zip, class: "form-control", data: { geocoding_target: "zip" } %>
  </div>
  <div class="mb-3">
    <button type="button" class="btn btn-outline-secondary btn-sm" data-action="click->geocoding#manualGeocode">
      <i class="bi bi-geo-alt"></i> Geocode Address
    </button>
    <small class="text-muted ms-2">Click to manually geocode the address</small>
  </div>
  <div class="mb-3">
    <%= form.label :latitude, class: "form-label" %>
    <%= form.number_field :latitude, step: "any", class: "form-control", data: { geocoding_target: "latitude" } %>
    <div class="form-text">Will be automatically populated when address is entered</div>
  </div>
  <div class="mb-3">
    <%= form.label :longitude, class: "form-label" %>
    <%= form.number_field :longitude, step: "any", class: "form-control", data: { geocoding_target: "longitude" } %>
    <div class="form-text">Will be automatically populated when address is entered</div>
  </div>
  <div class="mb-3">
    <%= form.label :phone, class: "form-label" %>
    <%= form.text_field :phone, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :website, class: "form-label" %>
    <%= form.text_field :website, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :yelp_id, class: "form-label" %>
    <%= form.text_field :yelp_id, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
